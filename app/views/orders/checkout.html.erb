<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <h1 class="border-bottom">My Shopping Cart</h1>
      <h2>Total items: <%= @orders.size %></h2>
        <div class="border-bottom">
          <% @orders.each do |order| %>
          <%= cl_image_tag order.product.photo.key, width: 100, height: 100, crop: :fill, class: 'img-fluid mb-4' %>
          <h3><%= order.product.name %> | $ <%= order.product.price %></h3>
          <% end %>
        </div>
        <%= link_to 'Continue shopping', products_path, class: 'btn btn-secondary' %>
        <%= link_to 'Confirm Purchase', products_path, class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
</div>
