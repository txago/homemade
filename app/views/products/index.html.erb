<div class="container my-4">
  <div class="row pt-2">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-8">
      <h1>All Products</h1>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
    <%= form_tag products_path, class: 'input-group mb-3', method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find Product"
      %>
      <div class="input-group-append">
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <% @products.each do |product| %>
      <div class="col-lg-3">
        <div class="card rounded my-4">
          <%= cl_image_tag product.photo.key, width: 640, height: 640, crop: :fill, class: 'img-fluid' %>
          <div class="card-body">
            <h2 class="card-title"><%= link_to product.name, product_path(product) %></h2>
            <%= link_to 'Buy <i class="fas fa-shopping-cart"></i>'.html_safe, product_path(product), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
