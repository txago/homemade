<div class="container my-4">
  <div class="row pt-2">
    <div class="col-12">
      <h1>All Products</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <% @products.each do |product| %>
      <div class="col-lg-3">
        <div class="card rounded my-4">
          <%= cl_image_tag product.photo.key, width: 640, height: 640, crop: :fill, class: 'img-fluid' %>
          <div class="card-body">
            <h2 class="card-title"><%= link_to product.name, product_path(product) %></h2>
            <%= link_to 'Buy <i class="fas fa-shopping-cart"></i>'.html_safe, product_path(product), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
