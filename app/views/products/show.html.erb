<div class='container justify-content-md-center text-center'>
  <h2> <%= @product.name %> </h2>
  <div class='row'>
    <div class='col-'>
      <img src="https://cdn.panelinha.com.br/receita/1434078000000-Bolo-de-Fuba.jpg" alt="Bolo" class="img-responsive">
    </div>
    <div class='col-sm text-left'>
      <p> <%= @product.description %> </p>
    </div>
    <div class='row'>
      <div class='col-sm text-center'>
        <p> Quantidade: <%= @product.quantity %> </p>
      </div>
      <div class='col-sm text-center'>
       Price: <%= @product.price %>
      </div>
  </div>
</div>
<div class="container">
  <div class='col'>
    <%= link_to 'Add to Cart', product_orders_path(@product), method: :post, class: "btn btn-primary" %>



  </div>
</div>
